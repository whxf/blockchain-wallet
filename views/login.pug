extends layout

block content
    div.container.pad-top-lg.pad-bottom-lg
        div.jumbotron
            div.row
                div.col-lg-3.col-md-2
                div.col-lg-6.col-md-8
                    h3.pad-bottom-sm 登录账号
                    form
                        div.form-group
                            label 手机号
                            input(name='phone').form-control(type="number")
                        div.form-group
                            div.label 密码
                            input(name='password').form-control(type="password")
                            p.text-right
                                a(href='/changepwd').text-secondary  忘记密码
                        button#button-login.btn.btn-secondary(type='button') 登录
                        p
                        a(href='/register')  注册新账户
                div.col-lg-3.col-md-2

block scripts
    script(src='/javascripts/views/check_tools.js')
    script(src='/javascripts/views/login.js')
