extends layout

block content
    div.container.pad-top-lg.pad-bottom-lg
        div.jumbotron
            div.row
                div.col-lg-3.col-md-2
                div.col-lg-6.col-md-8
                    h3.pad-bottom-sm 重置密码
                    form
                        div.form-group
                            label 手机号
                            input(id='phone', name='phone').form-control(type="number")
                        div.form-group
                            div.label 新密码
                            input(name='password').form-control(type="password")
                        div.form-group
                            div.label   确认密码
                            input(name='confirm-password').form-control(type="password")
                        div.form-group
                            label 验证码
                            input(name='code').form-control(type="number")
                            |
                            a#send-message(href='#')  发送验证码
                        button#button-confirm-change-password.btn.btn-secondary(type='button') 确认重置密码
                div.col-lg-3.col-md-2

block scripts
    script(src='/javascripts/check_tools.js')
    script(src='/javascripts/changepwd.js')
